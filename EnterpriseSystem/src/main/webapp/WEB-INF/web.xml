<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>EnterpriseSystem</display-name>
	<servlet>
		<servlet-name>SignupController</servlet-name>
		<servlet-class>com.example.controller.SignupController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignupController</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserLoginController</servlet-name>
		<servlet-class>com.example.controller.UserLoginController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserLoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SalesDataController</servlet-name>
		<servlet-class>com.example.controller.SalesDataController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SalesDataController</servlet-name>
		<url-pattern>/addsalesdata</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>UpdateSalesDataServlet</servlet-name>
		<servlet-class>com.example.controller.UpdateSalesDataServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UpdateSalesDataServlet</servlet-name>
		<url-pattern>/updateSalesData</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteSalesDataController</servlet-name>
		<servlet-class>com.example.controller.DeleteSalesDataController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteSalesDataController</servlet-name>
		<url-pattern>/deleteSalesData</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>ViewSalesDataServlet</servlet-name>
		<servlet-class>ViewSalesDataServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ViewSalesDataServlet</servlet-name>
		<url-pattern>/viewsalesdata</url-pattern>
	</servlet-mapping>





</web-app>